<% var post = page %>
<section class="main post">
  <div class="wrapper">
  <h2 class="post-title">
    <% if (post.link) { %>
      <a href="<%- url_for(post.link) %>" target="_blank"><%= post.title %></a>
    <% } else { %>
      <a href="<%- url_for(post.path) %>"><%= post.title %></a>
    <% } %>
  </h2>
  <span class="post-meta"><%- date(post.date, 'MMM D YYYY') %></span>
  <%- post.content %>
  </div>
</section>