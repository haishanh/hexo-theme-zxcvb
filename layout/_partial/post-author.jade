  var authorsArr = page.author || page.authors || [];
  var authors = [];

  if (!Array.isArray(authorsArr)) {
    authorsArr = [authorsArr]
  }

  authorsArr.forEach(function (el) {
    if(theme.authors[el]) {
      authors.push(
        Object.assign({
          link: theme.authors[el].avatar
        }, theme.authors[el])
      );
    } else {
      authors.push({
        name: el,
        avatar: 'https://avatars0.githubusercontent.com/u/583231?v=3',
        link: 'https://avatars0.githubusercontent.com/u/583231?v=3'
      });
    }
  });


