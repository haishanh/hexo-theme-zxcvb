- if (theme.post_nav)
  .post-nav
    include nav-svg.html

    - if (page.prev)
      a.nav.prev(
        href=url_for(page.prev.path)
      )
        svg.icon.left
          use(xlink:href="#ic_chevron_left_white_24px")
        | PREVIOUS


    - if (page.next)
      a.nav.next(
        href=url_for(page.next.path)
      )
        | NEXT
        svg.icon.right
          use(xlink:href="#ic_chevron_right_white_24px")